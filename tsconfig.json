{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES2020",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@mmorpg/assets/*": ["assets/*"],
			"@mmorpg/controllers/*": ["controllers/*"],
			"@mmorpg/interfaces/*": ["interfaces/*"],
			"@mmorpg/scenes/*": ["scenes/*"],
			"@mmorpg/utils/*": ["utils/*"],
			"@mmorpg/game-objects/*": ["game-objects/*"],
			"@mmorpg/camera/*": ["camera/*"],
			"@mmorpg/ui/*": ["ui/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
